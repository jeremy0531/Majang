<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="318dp"
    android:layout_height="111dp"
    android:id="@+id/gallery_item_layout"
    android:background="@drawable/gallery_card"
    >

    <TextView
        android:id="@+id/gallery_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="300dp"
        android:textStyle="bold"
        android:textColor="@color/main"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.076" />

    <TextView
        android:id="@+id/gallery_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="300dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/gallery_item_title"
        app:layout_constraintStart_toStartOf="@+id/gallery_item_title"
        app:layout_constraintTop_toBottomOf="@+id/gallery_item_title"

        />


</androidx.constraintlayout.widget.ConstraintLayout>